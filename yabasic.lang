    </context>

    <context id="operator" style-ref="operator">
      <match>\+|-|\*|/|%|\^</match>
     </context>

    <context id="yabasic" class="no-spell-check">
      <include>
        <context ref="bracket"/>
        <context ref="comment"/>
        <context ref="string"/>
	<context ref="number"/>
        <context ref="keywords"/>
        <context ref="commands"/>
	<context ref="operator"/>
      </include>
    </context>

  </definitions>
</language>
